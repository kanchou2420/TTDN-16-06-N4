<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form View -->
    <record id="view_ngan_sach_form" model="ir.ui.view">
        <field name="name">ngan_sach.form</field>
        <field name="model">ngan_sach</field>
        <field name="arch" type="xml">
            <form string="Ngân Sách">
                <header>
                    <button name="action_duyet" string="Duyệt" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('trang_thai', '!=', 'nhap')]}"/>
                    <button name="action_bat_dau_thuc_hien" string="Bắt đầu thực hiện" type="object" 
                            class="oe_highlight" attrs="{'invisible': [('trang_thai', '!=', 'duyet')]}"/>
                    <button name="action_ket_thuc" string="Kết thúc" type="object" 
                            attrs="{'invisible': [('trang_thai', '!=', 'dang_thuc_hien')]}"/>
                    <button name="action_huy" string="Hủy" type="object" 
                            attrs="{'invisible': [('trang_thai', 'in', ['ket_thuc', 'huy'])]}"/>
                    <button name="action_chuyen_ve_nhap" string="Chuyển về nháp" type="object" 
                            attrs="{'invisible': [('trang_thai', '=', 'nhap')]}"/>
                    <field name="trang_thai" widget="statusbar" 
                           statusbar_visible="nhap,duyet,dang_thuc_hien,ket_thuc"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ten_ngan_sach" placeholder="Tên ngân sách..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="ma_ngan_sach"/>
                            <field name="loai_ngan_sach"/>
                            <field name="nam"/>
                            <field name="quy" attrs="{'invisible': [('loai_ngan_sach', '!=', 'quy')], 'required': [('loai_ngan_sach', '=', 'quy')]}"/>
                            <field name="thang" attrs="{'invisible': [('loai_ngan_sach', '!=', 'thang')], 'required': [('loai_ngan_sach', '=', 'thang')]}"/>
                        </group>
                        <group>
                            <field name="ngay_bat_dau"/>
                            <field name="ngay_ket_thuc"/>
                            <field name="don_vi_tien_te"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Thông Tin Ngân Sách">
                            <field name="tong_ngan_sach" widget="monetary" options="{'currency_field': 'don_vi_tien_te'}"/>
                            <field name="tong_phan_bo" widget="monetary" options="{'currency_field': 'don_vi_tien_te'}"/>
                            <field name="con_lai" widget="monetary" options="{'currency_field': 'don_vi_tien_te'}"/>
                        </group>
                        <group string="Thông Tin Duyệt">
                            <field name="nguoi_lap"/>
                            <field name="ngay_lap"/>
                            <field name="nguoi_duyet"/>
                            <field name="ngay_duyet"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Dự Toán Chi">
                            <field name="du_toan_chi_ids">
                                <tree>
                                    <field name="ma_du_toan"/>
                                    <field name="ten_du_toan"/>
                                    <field name="loai_chi"/>
                                    <field name="so_tien_du_kien" sum="Tổng"/>
                                    <field name="so_tien_duyet" sum="Tổng"/>
                                    <field name="trang_thai"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Phân Bổ Ngân Sách">
                            <field name="phan_bo_ids">
                                <tree>
                                    <field name="ma_phan_bo"/>
                                    <field name="ten_phan_bo"/>
                                    <field name="loai_phan_bo"/>
                                    <field name="phong_ban_id"/>
                                    <field name="so_tien" sum="Tổng"/>
                                    <field name="so_tien_da_su_dung" sum="Tổng"/>
                                    <field name="ty_le_su_dung" widget="progressbar"/>
                                    <field name="trang_thai"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Theo Dõi Thực Hiện">
                            <field name="theo_doi_ids">
                                <tree>
                                    <field name="ma_giao_dich"/>
                                    <field name="ngay_giao_dich"/>
                                    <field name="loai_giao_dich"/>
                                    <field name="noi_dung"/>
                                    <field name="so_tien_thuc_te" sum="Tổng"/>
                                    <field name="trang_thai"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    
                    <group>
                        <field name="ghi_chu" placeholder="Ghi chú..."/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_ngan_sach_tree" model="ir.ui.view">
        <field name="name">ngan_sach.tree</field>
        <field name="model">ngan_sach</field>
        <field name="arch" type="xml">
            <tree string="Ngân Sách">
                <field name="ma_ngan_sach"/>
                <field name="ten_ngan_sach"/>
                <field name="loai_ngan_sach"/>
                <field name="nam"/>
                <field name="tong_ngan_sach" sum="Tổng"/>
                <field name="tong_phan_bo" sum="Tổng đã phân bổ"/>
                <field name="con_lai" sum="Tổng còn lại"/>
                <field name="trang_thai" decoration-success="trang_thai == 'dang_thuc_hien'" 
                       decoration-info="trang_thai == 'duyet'" decoration-muted="trang_thai == 'ket_thuc'"/>
            </tree>
        </field>
    </record>

    <!-- Search View -->
    <record id="view_ngan_sach_search" model="ir.ui.view">
        <field name="name">ngan_sach.search</field>
        <field name="model">ngan_sach</field>
        <field name="arch" type="xml">
            <search string="Tìm Kiếm Ngân Sách">
                <field name="ma_ngan_sach"/>
                <field name="ten_ngan_sach"/>
                <field name="nam"/>
                <filter string="Nháp" name="nhap" domain="[('trang_thai', '=', 'nhap')]"/>
                <filter string="Đã duyệt" name="duyet" domain="[('trang_thai', '=', 'duyet')]"/>
                <filter string="Đang thực hiện" name="dang_thuc_hien" domain="[('trang_thai', '=', 'dang_thuc_hien')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter string="Loại ngân sách" name="group_loai" context="{'group_by': 'loai_ngan_sach'}"/>
                    <filter string="Năm" name="group_nam" context="{'group_by': 'nam'}"/>
                    <filter string="Trạng thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_ngan_sach" model="ir.actions.act_window">
        <field name="name">Ngân Sách</field>
        <field name="res_model">ngan_sach</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Tạo ngân sách mới
            </p>
            <p>
                Lập kế hoạch và quản lý ngân sách cho các hoạt động của doanh nghiệp.
            </p>
        </field>
    </record>
</odoo>
