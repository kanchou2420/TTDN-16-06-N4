<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Bút Toán Khấu Hao Form View -->
    <record id="view_but_toan_khau_hao_form" model="ir.ui.view">
        <field name="name">but_toan_khau_hao.form</field>
        <field name="model">but_toan_khau_hao</field>
        <field name="arch" type="xml">
            <form string="Bút Toán Khấu Hao">
                <header>
                    <button name="action_post" string="Ghi sổ" type="object" 
                            class="btn-primary" attrs="{'invisible': [('trang_thai', '!=', 'draft')]}"/>
                    <button name="action_cancel" string="Hủy" type="object" 
                            class="btn-secondary" attrs="{'invisible': [('trang_thai', '!=', 'posted')]}"/>
                    <button name="action_draft" string="Chuyển về nháp" type="object" 
                            class="btn-secondary" attrs="{'invisible': [('trang_thai', '!=', 'cancelled')]}"/>
                    <field name="trang_thai" widget="statusbar" statusbar_visible="draft,posted"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="ma_but_toan"/>
                        </h1>
                    </div>
                    <group>
                        <group string="Thông tin chung">
                            <field name="ngay_ghi_so"/>
                            <field name="tai_san_id"/>
                            <field name="khau_hao_id"/>
                            <field name="phong_ban_id"/>
                        </group>
                        <group string="Bút toán kép">
                            <field name="tai_khoan_no"/>
                            <field name="tai_khoan_co"/>
                            <field name="so_tien"/>
                        </group>
                    </group>
                    <group>
                        <field name="dien_giai"/>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- Bút Toán Khấu Hao Tree View -->
    <record id="view_but_toan_khau_hao_tree" model="ir.ui.view">
        <field name="name">but_toan_khau_hao.tree</field>
        <field name="model">but_toan_khau_hao</field>
        <field name="arch" type="xml">
            <tree string="Bút Toán Khấu Hao" decoration-success="trang_thai=='posted'"
                  decoration-muted="trang_thai=='cancelled'">
                <field name="ma_but_toan"/>
                <field name="ngay_ghi_so"/>
                <field name="ten_tai_san"/>
                <field name="phong_ban_id"/>
                <field name="tai_khoan_no"/>
                <field name="tai_khoan_co"/>
                <field name="so_tien" sum="Tổng"/>
                <field name="trang_thai"/>
            </tree>
        </field>
    </record>

    <!-- Bút Toán Khấu Hao Search View -->
    <record id="view_but_toan_khau_hao_search" model="ir.ui.view">
        <field name="name">but_toan_khau_hao.search</field>
        <field name="model">but_toan_khau_hao</field>
        <field name="arch" type="xml">
            <search string="Tìm Bút Toán">
                <field name="ma_but_toan"/>
                <field name="ten_tai_san"/>
                <field name="phong_ban_id"/>
                <filter name="filter_posted" string="Đã ghi sổ" domain="[('trang_thai', '=', 'posted')]"/>
                <filter name="filter_draft" string="Nháp" domain="[('trang_thai', '=', 'draft')]"/>
                <group expand="0" string="Nhóm theo">
                    <filter name="group_phong_ban" string="Phòng ban" context="{'group_by': 'phong_ban_id'}"/>
                    <filter name="group_thang" string="Tháng" context="{'group_by': 'ngay_ghi_so:month'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action -->
    <record id="action_but_toan_khau_hao" model="ir.actions.act_window">
        <field name="name">Bút Toán Khấu Hao</field>
        <field name="res_model">but_toan_khau_hao</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_but_toan_khau_hao_search"/>
        <field name="context">{'search_default_filter_posted': 1}</field>
    </record>
</odoo>
