<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Khấu Hao List View -->
        <record id="view_khau_hao_tree" model="ir.ui.view">
            <field name="name">khau_hao.tree</field>
            <field name="model">khau_hao_tai_san</field>
            <field name="arch" type="xml">
                <tree string="Danh sách khấu hao" edit="false"
                      decoration-success="trang_thai=='posted'"
                      decoration-muted="trang_thai=='cancelled'">
                    <field name="ma_khau_hao"/>
                    <field name="tai_san_id"/>
                    <field name="ngay_khau_hao"/>
                    <field name="so_tien_khau_hao" sum="Tổng"/>
                    <field name="gia_tri_con_lai"/>
                    <field name="gia_tri_sau_khau_hao"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Khấu Hao Form View -->
        <record id="view_khau_hao_form" model="ir.ui.view">
            <field name="name">khau_hao.form</field>
            <field name="model">khau_hao_tai_san</field>
            <field name="arch" type="xml">
                <form string="Chi tiết khấu hao">
                    <header>
                        <button name="action_post_journal" string="Ghi sổ" type="object" 
                            class="btn btn-success" attrs="{'invisible': [('trang_thai', '!=', 'draft')]}"/>
                        <button name="action_cancel" string="Hủy" type="object" 
                            class="btn btn-danger" attrs="{'invisible': [('trang_thai', '!=', 'draft')]}"/>
                        <field name="trang_thai" widget="statusbar"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="ma_khau_hao" readonly="1"/></h1>
                        </div>
                        
                        <group>
                            <group>
                                <field name="tai_san_id" required="1"/>
                                <field name="ngay_khau_hao" required="1"/>
                                <field name="pp_khau_hao" required="1"/>
                            </group>
                            <group>
                                <field name="gia_tri_ban_dau" readonly="1"/>
                                <field name="gia_tri_con_lai" required="1"/>
                                <field name="so_tien_khau_hao" required="1"/>
                            </group>
                        </group>

                        <group string="Bút toán khấu hao">
                            <field name="but_toan_id" readonly="1"/>
                        </group>

                        <group string="Ghi chú">
                            <field name="ghi_chu" nolabel="1"/>
                        </group>

                        <group string="Kết quả">
                            <field name="gia_tri_sau_khau_hao" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Khấu Hao Search View -->
        <record id="view_khau_hao_search" model="ir.ui.view">
            <field name="name">khau_hao.search</field>
            <field name="model">khau_hao_tai_san</field>
            <field name="arch" type="xml">
                <search string="Tìm Khấu Hao">
                    <field name="ma_khau_hao"/>
                    <field name="tai_san_id"/>
                    <filter name="filter_posted" string="Đã ghi sổ" domain="[('trang_thai', '=', 'posted')]"/>
                    <filter name="filter_draft" string="Nháp" domain="[('trang_thai', '=', 'draft')]"/>
                    <group expand="0" string="Nhóm theo">
                        <filter name="group_tai_san" string="Tài sản" context="{'group_by': 'tai_san_id'}"/>
                        <filter name="group_thang" string="Tháng" context="{'group_by': 'ngay_khau_hao:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Khấu Hao Action -->
        <record id="action_khau_hao" model="ir.actions.act_window">
            <field name="name">Khấu Hao Tài Sản</field>
            <field name="res_model">khau_hao_tai_san</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_khau_hao_search"/>
            <field name="context">{'default_ngay_khau_hao': context_today()}</field>
            <field name="help">Quản lý khấu hao tài sản - Module độc lập không cần account</field>
        </record>
    </data>
</odoo>
