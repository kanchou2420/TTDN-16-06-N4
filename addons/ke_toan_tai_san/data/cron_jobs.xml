<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Cron Job: Khấu hao tự động hàng tháng -->
        <record id="cron_khau_hao_tu_dong" model="ir.cron">
            <field name="name">Khấu hao tài sản - Tự động hàng tháng</field>
            <field name="model_id" search="[('model', '=', 'khau_hao_tai_san')]"/>
            <field name="state">code</field>
            <field name="code">pass</field>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">months</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="False"/>
        </record>
    </data>
</odoo>
